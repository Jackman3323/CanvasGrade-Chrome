{
  "manifest_version": 2,
  "name": "CanvasGrade",
  "version": "1.0.1",
  "version_name": "1.0.1 Beta",
  "description": "Displays hidden grades",
  "author": "Jack Hughes",
  "permissions": [
    "https://kentdenver.instructure.com/courses/*/grades",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon" : "icon.png"
  },
  "icons": {
    "64" : "icon.png"
  },
  "content_scripts": [{
    "matches": ["https://*.instructure.com/courses/*/grades"],
    "js" : ["modifier.js"],
    "run_at": "document_end"
  }]
}
